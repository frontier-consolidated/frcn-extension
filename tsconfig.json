{
	"compilerOptions": {
		"allowJs": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"lib": ["esnext", "DOM", "DOM.Iterable"],
		"moduleResolution": "node",
		"module": "ESNext",
		"target": "ESNext",
		"rootDirs": ["."],
		"types": ["node"]
	},
	"include": ["./vite.config.ts", "src/**/*.ts"],
	"exclude": ["./node_modules/**"]
}
